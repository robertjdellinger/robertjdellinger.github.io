# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# HTML templates
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
