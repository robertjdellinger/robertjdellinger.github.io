# EditorConfig: https://EditorConfig.org
# Helps maintain consistent coding styles for multiple developers working on
# the same project across various editors and IDEs

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML/Template files
[*.{html,tmpl,tpl}]
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab

# Python
[*.py]
indent_size = 4

# Package files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_size = 2

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72
