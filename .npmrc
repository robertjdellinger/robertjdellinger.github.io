# pnpm configuration
# See: https://pnpm.io/npmrc

# Use a single lockfile at the root of the workspace
shared-workspace-lockfile=true

# Automatically install peer dependencies
auto-install-peers=true

# Strict peer dependencies (commented out for flexibility)
# strict-peer-dependencies=true

# Save exact versions in package.json
save-exact=false

# Use workspace protocol for workspace dependencies
link-workspace-packages=true

# Hoist all dependencies to the root node_modules
hoist=true

# Enable/disable git hooks
enable-pre-post-scripts=true
